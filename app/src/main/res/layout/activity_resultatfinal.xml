<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vue.ResultatfinalActivity"
    android:orientation="vertical"
    android:background="@drawable/bakcgrd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultatfinal"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="RESULTAT FINAL"
            android:textStyle="bold"
            android:textSize="40dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nb_vibration"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:hint="nombre de vibration"
            android:inputType="textPersonName"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/btn_vibrer"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="VIBRER" />

    </LinearLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:layout_weight="1"
        android:background="@drawable/resulatfin"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="40dp"
        android:textColorHint="@color/white" />


</LinearLayout>